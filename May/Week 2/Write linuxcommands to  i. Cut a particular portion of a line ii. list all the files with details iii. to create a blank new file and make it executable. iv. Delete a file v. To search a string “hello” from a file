#!/bin/bash

while true
do
  echo ""
  echo "========= MENU ========="
  echo "1. Cut a particular portion of a line"
  echo "2. List all files with details"
  echo "3. Create a blank new file and make it executable"
  echo "4. Delete a file"
  echo "5. Search string 'hello' in a file"
  echo "6. Exit"
  echo "========================"
  read -p "Enter your choice [1-6]: " choice

  case $choice in
    1)
      read -p "Enter filename: " fname
      if [ ! -f "$fname" ]; then
        echo "File not found."
        continue
      fi
      read -p "Enter line number: " line_num
      read -p "Enter start character position: " start
      read -p "Enter number of characters to cut: " count
      sed -n "${line_num}p" "$fname" | cut -c "$start"-$(($start + $count - 1))
      ;;
    2)
      ls -l
      ;;
    3)
      read -p "Enter new filename: " newfile
      touch "$newfile"
      chmod +x "$newfile"
      echo "File '$newfile' created and made executable."
      ;;
    4)
      read -p "Enter filename to delete: " delfile
      if [ -f "$delfile" ]; then
        rm "$delfile"
        echo "File '$delfile' deleted."
      else
        echo "File not found."
      fi
      ;;
    5)
      read -p "Enter filename to search in: " fname
      if [ ! -f "$fname" ]; then
        echo "File not found."
        continue
      fi
      grep "hello" "$fname"
      ;;
    6)
      echo "Exiting..."
      break
      ;;
    *)
      echo "Invalid choice. Enter 1 to 6."
      ;;
  esac
done
